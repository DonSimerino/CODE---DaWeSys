{
  "name": "cookie-decliner",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Gets rid of annoying cookie banners",
  "background": "views/background.html",

  "web_accessible_resources": [
    "images/*.png"
  ],

  "content_scripts": [
    {
      "matches": ["https://*.google.com/search?*", "https://*.google.de/search?*" ],
      "js": ["js/jquery.min.js", "content.js"],
      "css":["/css/hardcoded_style.css"]
    }
  ],
  "chrome_url_overrides": {
    "newtab":"views/home.html"
  },
  "browser_action" : {
    "default_popup": "views/popup.html",
    "default_title": "Cookie Decliner Title",
    "default_icon": {
      "16": "/images/green_icon_16.png",
      "32": "/images/green_icon_32.png",
      "48": "/images/green_icon_48.png",
      "128": "/images/green_icon_128.png"
    }
  },

  "options_page" : "/views/options.html",

  "permissions": [
    "tabs"
  ],

  "icons": {
    "16": "/images/green_icon_16.png",
    "32": "/images/green_icon_32.png",
    "48": "/images/green_icon_48.png",
    "128": "/images/green_icon_128.png"
  }

}